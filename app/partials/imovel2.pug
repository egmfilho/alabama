.page-header(style='background-image: url("../images/PN/house_residential_design_beautifully_13642_1920x1080.jpg")')
	.dark-layer
		.container
			.row
				.col-xs-12
					h1.text-xlg Informações do Imóvel

.container.hidden-xs.offset-top-15
	.row
		.col-sm-6
			p
				a(href='/home') Home
				| &nbsp;/&nbsp;
				a(href='/imoveis') Imóveis
				| &nbsp;/&nbsp;Imóvel

		.col-sm-6
			//- p.text-right
				a(href='')
					i.fa.fa-share-alt.icon-sm

.container.imovel.offset-top-15.offset-bottom-60
	.row
		.col-xs-12
			h5.text-gray.text-sans
				i.fa.fa-calendar
				| &nbsp;{{immobile.immobile_date | date:'dd/MM/yyyy'}}
			h1.title 				
				| {{immobile.immobile_name}} em {{immobile.Address.District.district_name}} {{immobile.Address.District.City.city_name}}

	//- .row.pane.perfil-imovel
		.col-xs-12(ng-if='imovel.ready')
			slick.slider-for(slides-to-show='1' slides-to-scroll='1' arrows='false' fade='false' as-nav-for='slick.slider-nav' current-index='imovel.currentSlide')
				.picture(ng-repeat='pic in immobile.GalleryImage')
					div
						img.img-responsive(ng-src='{{pic.url}}' ng-click='openLightbox()')
						.text(ng-if='pic.gallery_image_title || pic.gallery_image_text')
							h4.text-center {{pic.gallery_image_title}}
							p.text-sm.text-center {{pic.gallery_image_text}}

			slick.hidden-xs.slider-nav(slides-to-show='5' slides-to-scroll='1' as-nav-for='slick.slider-for' center-mode='true' focus-on-select='true' responsive='imovel.responsive2')
				.thumb(ng-style='{}' ng-repeat='pic in immobile.GalleryImage')
					.picture(ng-style='{"background-image": "url({{pic.thumb}})"}')

	.row
		.col-sm-8.col-md-9
			.row.pane.perfil-imovel
				.col-xs-12(ng-if='imovel.ready')
					slick.slider-for(slides-to-show='1' slides-to-scroll='1' arrows='false' fade='false' as-nav-for='slick.slider-nav' current-index='imovel.currentSlide')
						.picture(ng-repeat='pic in immobile.GalleryImage')
							div
								img.img-responsive(ng-src='{{pic.url}}' ng-click='openLightbox()')
								.text(ng-if='pic.gallery_image_title || pic.gallery_image_text')
									h4.text-center {{pic.gallery_image_title}}
									p.text-sm.text-center {{pic.gallery_image_text}}

					slick.hidden-xs.slider-nav(slides-to-show='5' slides-to-scroll='1' as-nav-for='slick.slider-for' center-mode='true' focus-on-select='true' responsive='imovel.responsive2')
						.thumb(ng-style='{}' ng-repeat='pic in immobile.GalleryImage')
							.picture(ng-style='{"background-image": "url({{pic.thumb}})"}')

			.row.pane.pane-gray
				.col-xs-12.description
					h3.text-primary Descrição do Imóvel
					p.text-sans.text-xs.text-line-spacing {{immobile.immobile_description}}
			
		.col-sm-4.col-md-3
			.interesse2.offset-top-15
				h3.offset-bottom-60 Características
				ul.list-unstyled
					li Código do Imóvel
						i.pull-right 1001
					li Área
						i.pull-right 90m
							sup 2
					li Dormitórios
						i.pull-right 3
					li Suítes
						i.pull-right 1
					li Banheiros
						i.pull-right 2
					li Vagas
						i.pull-right 1
				.separator
				ul.list-unstyled
					li Valor
						i.pull-right {{immobile.immobile_value | currency:'R$ ':2}}
					li Condomínio
						i.pull-right {{immobile.immobile_value_condominium | currency:'R$ ':2}}
					li IPTU
						i.pull-right {{immobile.immobile_value_iptu | currency:'R$ ':2}}
				.separator
				h3 Tenho Interesse
				input.form-control.offset-top-15(type='text' placeholder='Nome')
				input.form-control.offset-top-15(type='text' placeholder='Telefone')
				input.form-control.offset-top-15(type='email' placeholder='Email')
				textarea.form-control.offset-top-15(rows='5')
				button.btn.btn-primary.btn-lg.btn-block.offset-top-30
					i.fa.fa-envelope-o
					|  Enviar

	.row.offset-top-15(ng-if='immobile.feature_immobile.length')
		.col-xs-12
			h3.text-primary.feature-category.offset-bottom-15 Imóvel
		.col-xs-12.col-sm-6.col-md-4(ng-repeat-start='feature in immobile.feature_immobile track by $index')
			table.table.table-striped.table-immobile
				thead
					tr
						th {{feature.feature_type}}
				tbody
					tr(ng-repeat='data in feature.data')
						td {{data.feature_name}}
		.clearfix.visible-lg-block(ng-if='($index + 1) % 3 == 0')
		.clearfix.visible-md-block(ng-if='($index + 1) % 3 == 0')
		.clearfix.visible-sm-block(ng-if='($index + 1) % 2 == 0')
		div(ng-repeat-end='')

	.row.offset-top-15(ng-if='immobile.feature_condominium.length')
		.col-xs-12
			h3.text-primary.feature-category.offset-bottom-15 Condomínio
		.col-xs-12.col-sm-6.col-md-4(ng-repeat-start='feature in immobile.feature_condominium track by $index')
			table.table.table-striped.table-immobile
				thead
					tr
						th {{feature.feature_type}}
				tbody
					tr(ng-repeat='data in feature.data')
						td {{data.feature_name}}
		.clearfix.visible-lg-block(ng-if='($index + 1) % 3 == 0')
		.clearfix.visible-md-block(ng-if='($index + 1) % 3 == 0')
		.clearfix.visible-sm-block(ng-if='($index + 1) % 2 == 0')
		div(ng-repeat-end='')

	.row
		.col-xs-12(ng-if='imovel.ready')
			ng-map.offset-top-30.offset-bottom-30(default-style="true" center="{{immobile.immobile_latitude + ',' + immobile.immobile_longitude}}" zoom='15' scrollwheel='false')
				marker(id='#marker' position="{{immobile.immobile_latitude + ',' + immobile.immobile_longitude}}" on-click='contato.map.showInfoWindow("#info-window")')
				info-window(id='#info-window' visible-on-marker='#marker')
					div(ng-non-bindable='')
						h4 {{immobile.immobile_name}}

card-carousel.offset-top-60(carousel-id='sliding-cards' name='Veja também' interval='5000' cards='root_imoveis')